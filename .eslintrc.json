{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "globals": {
    "NodeJS": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "no-trailing-spaces": "error",
    "no-shadow": "off",
    "@typescript-eslint/no-shadow": ["error"],
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": "error",
    "max-len": "off",
    "no-console": "off",
    "semi": [2, "always"],
    "indent": ["error", 2],
    "comma-dangle": "off",
    "no-restricted-syntax": "off",
    "quotes": ["error", "single"]
  }
}
